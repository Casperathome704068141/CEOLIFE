rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isHead(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isOwner(ownerId) {
      return isSignedIn() && ownerId == request.auth.uid;
    }

    function householdOwner(householdId) {
      return isSignedIn() &&
        get(/databases/$(database)/documents/households/$(householdId)).data.ownerUid == request.auth.uid;
    }

    function docShared(doc) {
      return isSignedIn() && doc.shareSubjects != null && doc.shareSubjects[request.auth.uid] != null;
    }

    match /users/{userId} {
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow read, update: if isHead(userId);
      allow delete: if false;
    }

    match /households/{householdId} {
      allow create: if isSignedIn() && request.resource.data.ownerUid == request.auth.uid;
      allow read, update: if householdOwner(householdId);
      allow delete: if false;

      match /members/{memberId} {
        allow read, write: if householdOwner(householdId);
      }

      match /aggregates/{aggregateId} {
        allow read: if householdOwner(householdId);
        allow write: if false;
      }
    }

    match /accounts/{accountId} {
      allow read: if isOwner(resource.data.ownerId);
      allow create, update: if isOwner(request.resource.data.ownerId);
      allow delete: if isOwner(resource.data.ownerId);
    }

    match /transactions/{transactionId} {
      allow read: if isOwner(resource.data.ownerId) ||
        (resource.data.householdId != null && householdOwner(resource.data.householdId));
      allow create, update: if isOwner(request.resource.data.ownerId);
      allow delete: if isOwner(resource.data.ownerId);
    }

    match /budgets/{budgetId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /debts/{debtId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /incomeStreams/{incomeId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /bills/{billId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /goals/{goalId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /documents/{docId} {
      allow read: if isOwner(resource.data.owner) || docShared(resource.data);
      allow create, update: if isOwner(request.resource.data.owner) && request.resource.data.encrypted == true;
      allow delete: if isOwner(resource.data.owner);
    }

    match /events/{eventId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /habits/{habitId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /assets/{assetId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /shoppingLists/{listId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /simulations/{simulationId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /automations/{automationId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /briefings/{briefingId} {
      allow read: if isOwner(resource.data.ownerId);
      allow create: if isOwner(request.resource.data.ownerId);
      allow update: if false;
    }

    match /nudges/{nudgeId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /settlements/{settlementId} {
      allow read, write: if resource.data.householdId != null && householdOwner(resource.data.householdId);
    }

    match /merchantRules/{ruleId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }

    match /contacts/{contactId} {
      allow read, write: if isOwner(resource.data.ownerId) || isOwner(request.resource.data.ownerId);
    }
  }
}
