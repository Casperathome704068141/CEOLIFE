
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PATTERN: Users can only read/write their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // The rules below were generated by the Firebase team to support the demo.
    // They are not intended for production use.
    
    // Helper function to check if a user is a member of a household without extra reads.
    // This prefers custom claims (auth.token.householdIds) to avoid per-request lookups
    // and falls back to embedded member lists on the resource for denormalized data.
    function isHouseholdMember(data) {
      let householdId = data.householdId;
      let members = data.members;

      // Custom claims allow constant-time membership checks without document reads.
      if (request.auth.token.householdIds != null && householdId in request.auth.token.householdIds) {
        return true;
      }

      // Denormalized member lists on the resource avoid extra get() calls.
      return request.auth.uid in (members != null ? members : []);
    }

    // Members of a household can read the household document.
    // Only the owner of the household can update it.
    match /households/{householdId} {
      allow read: if isHouseholdMember(resource.data);
      allow write: if request.auth.uid == resource.data.ownerId;
    }

    // Rules for collections that are tied to a user.
    match /simulations/{simulationId} {
      allow read, write: if request.auth.uid == resource.data.ownerId;
    }
    match /goals/{goalId} {
      allow read, write: if request.auth.uid == resource.data.ownerId;
    }
    match /events/{eventId} {
      allow read, write: if request.auth.uid == resource.data.ownerId;
    }
    match /documents/{documentId} {
      allow read, write: if request.auth.uid == resource.data.ownerId;
    }
    match /shoppingLists/{listId} {
      allow read, write: if request.auth.uid == resource.data.ownerId;
    }

    // Rules for collections that are tied to a household.
    match /goals/{goalId} {
      allow read, write: if isHouseholdMember(resource.data ?? request.resource.data);
    }
    match /shoppingLists/{listId} {
      allow read, write: if isHouseholdMember(resource.data ?? request.resource.data);
    }
    match /events/{eventId} {
      allow read, write: if isHouseholdMember(resource.data ?? request.resource.data);
    }
    match /assets/{assetId} {
      allow read, write: if isHouseholdMember(resource.data ?? request.resource.data);
    }
    match /medications/{medicationId} {
        allow read, write: if isHouseholdMember(resource.data ?? request.resource.data);
    }

    // Documents can be owned by a user and shared with others.
    match /documents/{documentId} {
      allow read: if request.auth.uid == resource.data.ownerId || resource.data.shareSubjects[request.auth.uid] != null;
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if request.auth.uid == resource.data.ownerId;
    }
  }
}
