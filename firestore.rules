
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // PATTERN: Users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to subcollections (like 'events', 'finance')
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // The rules below were generated by the Firebase team to support the demo.
    // They are not intended for production use.
    
    // Helper function to check if a user is a member of a household.
    function isHouseholdMember(householdId) {
      let household = get(/databases/$(database)/documents/households/$(householdId));
      return request.auth.uid in household.data.members;
    }

    // Members of a household can read the household document.
    // Only the owner of the household can update it.
    match /households/{householdId} {
      allow read: if isHouseholdMember(householdId);
      allow write: if get(/databases/$(database)/documents/households/$(householdId)).data.ownerId == request.auth.uid;
    }

    // Rules for collections that are tied to a household.
    match /goals/{goalId} {
      allow read, write: if isHouseholdMember(resource.data.householdId);
    }
    match /shoppingLists/{listId} {
      allow read, write: if isHouseholdMember(resource.data.householdId);
    }
    match /events/{eventId} {
      allow read, write: if isHouseholdMember(resource.data.householdId);
    }
    match /assets/{assetId} {
      allow read, write: if isHouseholdMember(resource.data.householdId);
    }
    match /medications/{medicationId} {
        allow read, write: if isHouseholdMember(resource.data.householdId);
    }

    // Documents can be owned by a user and shared with others.
    match /documents/{documentId} {
      allow read: if request.auth.uid == resource.data.ownerId || resource.data.shareSubjects[request.auth.uid] != null;
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if request.auth.uid == resource.data.ownerId;
    }
  }
}
