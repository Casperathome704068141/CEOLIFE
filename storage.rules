rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /vault/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.contentType.matches('application/pdf|image/.*');
    }
  }
}
