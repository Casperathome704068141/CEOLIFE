{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        }
      },
      "required": ["name", "email"]
    },
    "goal": {
      "title": "Goal",
      "description": "A financial or personal goal.",
      "type": "object",
      "properties": {
        "ownerId": { "type": "string" },
        "name": { "type": "string" },
        "target": { "type": "number" },
        "current": { "type": "number" },
        "deadline": { "type": "string", "format": "date-time" },
        "priority": { "type": "string", "enum": ["high", "medium", "low"] }
      },
      "required": ["ownerId", "name", "target", "current", "deadline", "priority"]
    },
    "bill": {
      "title": "Bill",
      "description": "A recurring or one-time bill.",
      "type": "object",
      "properties": {
        "ownerId": { "type": "string" },
        "name": { "type": "string" },
        "amount": { "type": "number" },
        "dueDate": { "type": "string", "format": "date-time" },
        "autopay": { "type": "boolean" }
      },
      "required": ["ownerId", "name", "amount", "dueDate"]
    },
    "event": {
      "title": "Event",
      "description": "A calendar event or appointment.",
      "type": "object",
      "properties": {
        "ownerId": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "start": { "type": "string", "format": "date-time" },
        "end": { "type": "string", "format": "date-time" },
        "time": { "type": "string" }
      },
      "required": ["ownerId", "title", "start", "end", "time"]
    },
    "document": {
      "title": "Document",
      "description": "A document stored in the vault.",
      "type": "object",
      "properties": {
        "ownerId": { "type": "string" },
        "filename": { "type": "string" },
        "type": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "tags": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["ownerId", "filename", "type"]
    },
    "shoppingList": {
      "title": "Shopping List",
      "description": "A list of items to purchase.",
      "type": "object",
      "properties": {
        "ownerId": { "type": "string" },
        "name": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "qty": { "type": "number" },
              "priority": { "type": "string", "enum": ["high", "medium", "low"] }
            },
            "required": ["id", "label"]
          }
        }
      },
      "required": ["ownerId", "name", "items"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "User profile information."
    },
    "/goals": {
      "schema": {
        "$ref": "#/entities/goal"
      },
      "description": "Collection of user goals."
    },
    "/bills": {
      "schema": {
        "$ref": "#/entities/bill"
      },
      "description": "Collection of user bills."
    },
    "/events": {
      "schema": {
        "$ref": "#/entities/event"
      },
      "description": "Collection of calendar events."
    },
    "/documents": {
      "schema": {
        "$ref": "#/entities/document"
      },
      "description": "Collection of user documents."
    },
    "/shoppingLists": {
      "schema": {
        "$ref": "#/entities/shoppingList"
      },
      "description": "User shopping lists."
    }
  }
}
